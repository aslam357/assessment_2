<odoo>
    <record id="res_config_settings_view_form_dimension" model="ir.ui.view">
        <field name = "name">res.config.settings</field>
        <field name = "model">res.config.settings</field>
        <field name = "inherit_id" ref = "sale_res_config_settings_view_form"/>
        <field name ="arch" type="xml">
                <xpath expr="div//field[@name='sale_configuration']" position = "inside">
                    <div class="app_settings_block" string="Dimension Pricing">
                        <h2>Dimension Pricing</h2>
                        <div class ="row mt16 o_settings_container">
                        <div class ="row-6">
                        <label for="group_dimension_pricing"/>
                        <field name="group_dimension_pricing"/>
                    </div>
                    </div>
                    </div>
                </xpath>
        </field>
    </record> 
</odoo> 